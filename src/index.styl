              overflow hidden
              .best-worker-item
                height 7em
                margin 0 -20px
                padding 1em 2em
                background-color #fff
                overflow hidden
                @media screen and (max-width: 800px)
                  min-width 300px
                  padding 1em 0.7em
                .avatar-holder
                  display inline-block
                  width 10%
                  height 100%
