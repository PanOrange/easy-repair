@import '../node_modules/react-dates/lib/css/_datepicker.css';
@import 'https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css';

@font-face {
  font-family: 'FontAwesome';
  src: url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/fonts/fontawesome-webfont.eot');
  src: url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/fonts/fontawesome-webfont.eot') format('embedded-opentype'),
          url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/fonts/fontawesome-webfont.woff2') format('woff2'),
          url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/fonts/fontawesome-webfont.woff') format('woff'),
          url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/fonts/fontawesome-webfont.ttf') format('truetype'),
          url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/fonts/fontawesome-webfont.svg') format('svg');
  font-weight:normal;
  font-style:normal
}

$c-main = #FDE200
$c-secondary = #FF8600
$c-bg = #333
$c-bg-secondary = #777

*
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box
html
  height 100%
  body
    margin 0
    position relative
    padding-bottom 170px
    min-height 100%
    font-family: 'Open Sans', Arial, sans-serif;
    font-size 16px
    background: $c-bg url("./img/img-studio-1.jpg") top center no-repeat
    background-attachment fixed
    background-size cover
    @media screen and (max-width: 400px)
      font-size 14px
      min-width 320px
    @media screen and (max-width: 800px)
      padding-bottom 300px
    @media screen and (min-width: 1441px)
      font-size 18px
    &:before
      content ''
      display block
      position absolute
      top 0
      left 0
      height 100%
      width 100%
      background -moz-radial-gradient(center, ellipse cover,  rgba(255,255,255,0) 0%, rgba(255,255,255,0.79) 54%, rgba(255,255,255,1) 95%);
      background: -webkit-radial-gradient(center, ellipse cover,  rgba(255,255,255,0) 0%,rgba(255,255,255,0.79) 54%,rgba(255,255,255,1) 95%);
      background: radial-gradient(ellipse at center,  rgba(255,255,255,0) 0%,rgba(255,255,255,0.79) 54%,rgba(255,255,255,1) 95%);
    .btn
      border-radius 4px
      border 2px solid $c-main
      color $c-main
      background-color: transparent
      font-family: 'Open Sans', Arial, sans-serif;
      outline none
      cursor pointer
      overflow hidden
      transition all 0.5s ease 0s
      &.activate-form
        padding 0 10px
      &.btn-login
        font-weight 300
      &.btn-submit
        width 100%
        padding 10px
        background-color $c-bg-secondary
        &:hover
          color $c-bg-secondary
          border 2px solid @color
      &.btn-close
        position absolute
        top 15px
        right 15px
        border none
        border-radius 50%
        color $c-bg-secondary
      &.btn-search
        padding 10px 20px
        .fa
          margin-right 10px
        &.collapse
          padding 5px
          display none
          @media screen and (max-width: 800px)
            display inline-block
      &.btn-menu
        display none
        margin-right 10px
        padding 5px 10px
        @media screen and (max-width: 800px)
          display inline-block
      &:hover
        background-color rgba($c-main, 0.3)
    .alert
      margin 0 auto
      padding 20px 40px
      max-width 600px
      font-size 1.5em
      border-radius 4px
      .fa
        margin-right 1em
      &.alert-info
        color dodgerblue
        background-color lighten(@color, 90%)
        border 2px solid @color
      &.alert-error
        color #ff7474
        background-color lighten(@color, 90%)
        border 2px solid @color
    .header
      position fixed
      top 0
      left 0
      width 100%
      background: -moz-linear-gradient(left, rgba($c-bg,0.6) 0%, rgba($c-bg,0.95) 5%, rgba($c-bg,1) 95%, rgba($c-bg,0.6) 100%);
      background: -webkit-linear-gradient(left, rgba($c-bg,0.6) 0%,rgba($c-bg,0.95) 5%,rgba($c-bg,1) 95%,rgba($c-bg,0.6) 100%);
      background: linear-gradient(to right, rgba($c-bg,0.6) 0%,rgba($c-bg, 0.95) 5%,rgba($c-bg,1) 95%,rgba($c-bg,0.6) 100%);
      z-index 10
      .header-top
        margin 0 auto
        max-width 900px
        line-height 1.2
        @media screen and (max-width: 840px)
          min-width 300px
        .phone-number
        .login-holder
          float right
          margin-right 40px
        .phone-number
          color $c-main
          .fa
            margin-right 10px
        .user-holder
          padding 5px 20px
          color #fff
          .fa
            margin-right 10px
        &:after
          content ""
          display block
          clear both
      .header-bottom
        padding 40px 60px
        transition padding 0.5s ease 0s
        @media screen and (max-width: 1024px)
          min-width 300px
          padding 40px 20px
        &.header-bottom_small
          padding 10px 60px
          @media screen and (max-width: 1024px)
            padding 10px 20px
        ul
          margin 0 0 10px
          padding 0
          list-style none
          text-align center
          @media screen and (max-width: 800px)
            text-align right
          .link
            display inline-block
            @media screen and (max-width: 800px)
              display none
            &.mobile
              @media screen and (max-width: 800px)
                display block
                margin-bottom 4px
            >a
              display block
              padding 10px 20px
              text-decoration none
              border-bottom 2px solid transparent
              color #fff
              transition all 0.5s ease 0s
              cursor pointer
              @media screen and (max-width: 800px)
                border-bottom none
                border-right 4px solid transparent
              &.active
                color $c-main
                border-bottom 1px solid @color
                @media screen and (max-width: 800px)
                  border-bottom none
                  border-right 4px solid $c-main
              &:hover
                border-bottom 1px solid $c-main
                @media screen and (max-width: 800px)
                  border-bottom none
                  border-right 4px solid $c-main
        .search
          display block
          max-width 1200px
          margin 0 auto
          @media screen and (max-width: 1024px)
            font-size 0.9em
          form
            transition all 0.5s ease 0s
            @media screen and (max-width: 800px)
              display none
            &.block
              @media screen and (max-width: 800px)
                display block
              .select
              .DateInput__display-text
                @media screen and (max-width: 800px)
                  display block
          fieldset
            padding .35em
            border-radius 4px
            border 1px solid $c-bg-secondary
            text-align center
          .select
          .DateInput__display-text
            padding 10px
            font-family 'Open Sans', Arial, sans-serif !important
            font-size 1em
            line-height 1.2em
            background-color $c-main
          .select
            padding 10px
            width 20%
            border-radius 4px
            border 2px solid $c-bg-secondary
            outline none
            @media screen and (min-width: 801px)
              &:nth-child(even)
                margin 0 1%
            @media screen and (max-width: 1124px)
              width 15%
            @media screen and (max-width: 800px)
              display block
              width 100%
          .DateRangePicker
            @media screen and (max-width: 800px)
              display block
          .DateRangePickerInput
            border 2px solid $c-bg-secondary
            border-radius 4px
            background-color #ededcd
            @media screen and (max-width: 800px)
              width 100%
            .DateInput
              padding 2px
              width 90px
              background-color transparent
              font-size 1em
              line-height 1.2em
              @media screen and (max-width: 800px)
                width 40%
          .transition-container
            box-shadow 0 0 10px $c-bg
