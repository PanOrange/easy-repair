        .slogan
          display none
      &.best-worker
        padding-top 200px
        color $c-bg-secondary
        .react-sanfona
          .react-sanfona-item
            min-width 300px
            display block
            position relative
            &:before
              position absolute
              top 0.7em
              left 1em
              font-size 1.5em
