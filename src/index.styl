                .rate
                .works
                .experience
                .order-holder
                  display inline-block
                  width 17%
                  height 100%
                  vertical-align middle
                  @media screen and (max-width: 800px)
                    width 30%
                  div
                    padding 0.2em
                    text-align center
                  .activate-form
                    width 100%
                    height 40px
                    left 0
                    border-color $c-bg
                    background-color $c-main
                    color $c-bg
                    transition all 0.5s ease 0s
                    &:hover
                      background-color lighten($c-main, 50%)
                .works
                .experience
                  @media screen and (max-width: 800px)
                    display none
                .rate
                  @media screen and (max-width: 600px)
                    display none
                .name
                  @media screen and (max-width: 600px)
                    width 45%
                .order-holder
                  @media screen and (max-width: 600px)
                    width 35%
      .wrapper
        position relative
