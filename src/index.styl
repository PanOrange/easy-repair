      position relative
      padding 250px 40px 20px
      max-width 1200px
      margin 0 auto
      z-index 6
      @media screen and (max-width: 800px)
        padding 170px 10px 20px
        min-width 300px
      &.homepage
        padding 450px 40px 20px
        color $c-bg-secondary
        @media screen and (max-width: 800px)
          padding 200px 40px 20px
        .slogan
          position relative
          margin 0 auto 400px
          max-width 900px
          z-index 6
          @media screen and (max-width: 800px)
            display none
          .repair
          .easy
            display inline-block
            width 50%
            text-align center
          .repair>span
            font-size 6em
            color $c-bg-secondary
            text-shadow 5px 5px 10px black
